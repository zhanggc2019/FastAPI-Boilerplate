DATABASE_POOL_PRE_PING=true
DATABASE_POOL_USE_LIFO=false

# JWT Security - 必须设置强密钥，生产环境建议使用至少32位随机字符串
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

